Jenkinsfile1
pipeline {
agent any
stages{
stage (gitcheckout)
{
step()
git clone url
}
stage ( build )
{
step (build)
mvn clean package
}
stage ( deploy )
step()
{
scp source destination
tomcat service start
}
}


